<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.selenatan.iotsmartscale.ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:alignmentMode="alignMargins"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="First Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_firstName"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <EditText
                android:hint="Set first name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:id="@+id/editText_firstNameVal"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:text="Last Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_lastName"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <EditText
                android:hint="Set last name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:id="@+id/editText_lastNameVal"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_nameVal"
                android:layout_alignLeft="@+id/editText_nameVal"
                android:layout_alignStart="@+id/editText_nameVal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_email"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:text="emailVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_email"
                android:layout_alignLeft="@+id/textView_email"
                android:layout_alignStart="@+id/textView_email"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView_emailVal"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:text="Date of Birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_emailVal"
                android:layout_alignLeft="@+id/editText_emailVal"
                android:layout_alignStart="@+id/editText_emailVal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_dob"
                android:layout_row="3"
                android:layout_column="0" />

            <Spinner
                android:id="@+id/spinner_dobVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:text="Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_emailVal"
                android:layout_alignLeft="@+id/editText_emailVal"
                android:layout_alignStart="@+id/editText_emailVal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_gender"
                android:layout_row="4"
                android:layout_column="0" />

            <Spinner
                android:id="@+id/spinner_genderVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_row="4"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/textView_showGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/spinner_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_row="4"
                android:layout_column="1"/>

            <TextView
                android:text="Height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/editText_dobVal"
                android:layout_alignStart="@+id/editText_dobVal"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_height"
                android:layout_row="5"
                android:layout_column="0" />

            <EditText
                android:hint="Set height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_height"
                android:layout_alignLeft="@+id/textView_height"
                android:layout_alignStart="@+id/textView_height"
                android:textSize="16sp"
                android:id="@+id/editText_heightVal"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                android:text="Weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_heightVal"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_weight"
                android:layout_row="6"
                android:layout_column="0" />

            <EditText
                android:hint="Set weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_weight"
                android:layout_alignLeft="@+id/textView_weight"
                android:layout_alignStart="@+id/textView_weight"
                android:textSize="16sp"
                android:id="@+id/editText_weightVal"
                android:layout_row="6"
                android:layout_column="1" />

            <TextView
                android:text="Target Weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_weightVal"
                android:layout_toRightOf="@+id/editText_weightVal"
                android:layout_toEndOf="@+id/editText_weightVal"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_targetWeight"
                android:layout_row="7"
                android:layout_column="0" />

            <EditText
                android:hint="Set target weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_targetWeight"
                android:layout_toRightOf="@+id/textView_targetWeight"
                android:layout_toEndOf="@+id/textView_targetWeight"
                android:textSize="16sp"
                android:id="@+id/editText_targetWeightVal"
                android:layout_row="7"
                android:layout_column="1" />

            <TextView
                android:text="Target Intake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_targetWeightVal"
                android:layout_alignLeft="@+id/editText_targetWeightVal"
                android:layout_alignStart="@+id/editText_targetWeightVal"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:id="@+id/textView_targetIntake"
                android:layout_row="8"
                android:layout_column="0" />

            <EditText
                android:hint="Set target intake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_targetIntake"
                android:layout_alignLeft="@+id/textView_targetIntake"
                android:layout_alignStart="@+id/textView_targetIntake"
                android:textSize="16sp"
                android:id="@+id/editText_targetIntakeVal"
                android:layout_row="8"
                android:layout_column="1" />

        </GridLayout>

        <Button
            android:text="Save Changes"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_saveChanges"
            android:background="@drawable/button_shape_small"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>
