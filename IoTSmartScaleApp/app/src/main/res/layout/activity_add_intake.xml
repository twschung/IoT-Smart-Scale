<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_intake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.selenatan.iotsmartscale.AddIntakeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Food Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:id="@+id/textView_foodItem" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:hint="Enter food item (e.g. apple)"
            android:id="@+id/editText_foodItemVal" />

        <TextView
            android:text="Calorie Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:id="@+id/textView_calorieContent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Enter calorie content (e.g. 250)"
                android:id="@+id/editText_calorieContentVal" />

            <TextView
                android:text="kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:id="@+id/textView_kcal" />
        </TableRow>

        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:id="@+id/textView_date" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:hint="yyyy-mm-dd"
            android:focusable="false"
            android:id="@+id/editText_dateConsumedVal" />

        <Button
            android:text="Add to Intake"
            android:layout_width="210dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:minHeight="50dp"
            android:textSize="18dp"
            android:background="@drawable/button_shape_small"
            android:id="@+id/button_addIntake" />

    </LinearLayout>
</RelativeLayout>
